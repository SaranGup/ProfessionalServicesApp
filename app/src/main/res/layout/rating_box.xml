<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_blue"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/reviewer_name_box"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/brown_main"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/review_text">
        <TextView
            android:id="@+id/reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sample name"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
    </androidx.cardview.widget.CardView>
    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/stars_given"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/reviewer_name_box"
        app:srb_rating="3.8"
        app:srb_starBorderWidth="3"
        app:srb_starCornerRadius="0"
        app:srb_stepSize="0.1"/>
    <TextView
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stars_given"
        android:text="@string/short_sample_text"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingLeft="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>