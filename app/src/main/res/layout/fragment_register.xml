<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.professionalservicesapp.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_blue"
        android:padding="15dp">
        <TextView
            android:id="@+id/RegisterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register:"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/pfpCard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/brown_main"
            app:layout_constraintTop_toBottomOf="@id/RegisterText"
            android:padding="15dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="35dp"
                android:src="@drawable/ic_baseline_add_a_photo_12"
                android:background="@color/background_grey"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/pfpCard"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Name"
                android:background="@color/brown_main"
                android:textColor="@color/white"
                android:textColorHint="@color/hint_grey"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dob_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/name_input"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Date of Birth"
                android:background="@color/brown_main"
                android:textColor="@color/white"
                android:textColorHint="@color/hint_grey"
                android:inputType="date"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>